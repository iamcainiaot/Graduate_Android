<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_loading_dialog"
    android:gravity="center_horizontal"
    android:minWidth="@dimen/dimen_360"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dimen_40"
    android:paddingTop="@dimen/dimen_36"
    android:paddingRight="@dimen/dimen_40"
    android:paddingBottom="@dimen/dimen_56">

    <ImageView
        android:id="@+id/iv_loading"
        android:layout_width="@dimen/dimen_282"
        android:layout_height="@dimen/dimen_240"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#1b1b1b"
        android:textSize="@dimen/font_28"
        tools:text="正在加载..." />

</LinearLayout>